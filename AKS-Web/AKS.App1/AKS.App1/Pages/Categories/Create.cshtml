@page
@model AKS.App1.Pages.Categories.CreateModel
@{
    ViewData["Title"] = "Create Category";
}

<h1>Create Category</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="ProductCategory.CategoryName"></label>
        <input asp-for="ProductCategory.CategoryName" class="form-control" />
        <span asp-validation-for="ProductCategory.CategoryName" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}